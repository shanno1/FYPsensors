<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sensorsfyp.Itemactivity" >

    <TextView
        android:id="@+id/SeqText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/Rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/SeqText"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/SeqText"
        android:text="Rotation Vec:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Acceleration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Rotation"
        android:layout_alignBottom="@+id/Rotation"
        android:layout_alignParentRight="true"
        android:layout_marginRight="44dp"
        android:text="Linear Accel:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/AccXText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Acceleration"
        android:layout_below="@+id/SeqText"
        android:text="X:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/AccYText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Acceleration"
        android:layout_below="@+id/SeqText"
        android:layout_marginTop="22dp"
        android:text="Y:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/AccZText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AccXText"
        android:layout_below="@+id/AccXText"
        android:layout_marginTop="28dp"
        android:text="Z:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/RotXText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Rotation"
        android:layout_below="@+id/SeqText"
        android:text="X:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/RotYText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/AccYText"
        android:layout_alignBottom="@+id/AccYText"
        android:layout_alignLeft="@+id/RotXText"
        android:text="Y:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/RotZText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/AccZText"
        android:layout_alignBottom="@+id/AccZText"
        android:layout_alignLeft="@+id/RotYText"
        android:text="Z:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>