<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sensorsfyp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.gravity"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.gyroscope"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Menu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Add_Exercise"
            android:label="@string/title_activity_add__exercise" >
        </activity>
        <activity
            android:name=".ViewExercise"
            android:label="@string/title_activity_view_exercise" >
        </activity>
        <activity
            android:name=".ExerciseList"
            android:label="@string/title_activity_exercise_list" >
        </activity>
        <activity
            android:name=".ViewExerciseList"
            android:label="@string/title_activity_view_exercise_list" >
        </activity>
        <activity
            android:name=".Itemactivity"
            android:label="@string/title_activity_itemactivity" >
        </activity>
    </application>

</manifest>
